---
import Background from '@components/layout/Background';

import MainLayout from '@layouts/MainLayout.astro';
---

<MainLayout title="En construcción">
  <div class="relative">
    <div class="relative sm:overflow-hidden">
      <div class="absolute inset-0">
        <Background client:idle>
          <div class="flex flex-col items-center justify-center space-x-4 space-y-8">
            <h1 class="text-4xl md:text-6xl font-thin">¡En construcción!</h1>
            <p class="text-xs md:text-sm font-light">
              Aún estoy trabajando en mi página personal, pronto estará disponible.
            </p>
          </div>
        </Background>
      </div>
      <div class="relative inset-0">
        <div class="w-screen h-screen"></div>
      </div>
    </div>
  </div>
</MainLayout>
